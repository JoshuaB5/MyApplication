<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.patrickweijs.myapplication.StoryListActivity"
    android:background="@drawable/muur">

    <TextView
        android:id="@+id/poptext"
        android:layout_width="565dp"
        android:layout_height="265dp"
        android:background="#ffd5cf88"
        android:textSize="18sp"
        android:textColor="#ff000000">
    </TextView>


    <ScrollView
        android:layout_width="220sp"
        android:layout_height="260sp"
        android:id="@+id/scrollView2"
        android:fillViewport="true"
        android:layout_alignBottom="@+id/poptext"
        android:layout_alignRight="@+id/poptext"
        android:layout_alignEnd="@+id/poptext"
        android:paddingRight="10sp"
        android:paddingTop="15sp">

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/veld"
        android:layout_below="@+id/click"
        android:layout_centerHorizontal="true"
        android:minWidth="200sp"
            android:editable="true" />

    </ScrollView>

    <ScrollView
        android:layout_width="330sp"
        android:layout_height="340sp"
        android:id="@+id/scrollView3"
        android:fillViewport="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20sp"
        android:paddingTop="20sp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="340sp"
        android:layout_alignTop="@+id/poptext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

    <TextView
          android:id="@+id/verhaal1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Joseph de Leeuw"
          android:textSize="20sp"
          android:onClick="onClick"
          android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Abraham Blitz"
      android:textSize="20sp"
      android:id="@+id/verhaal2"
        android:layout_below="@+id/verhaal1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Alexander Abraham Goldwasser"
      android:textSize="20sp"
      android:id="@+id/verhaal3"
      android:layout_below="@+id/verhaal2"
      android:layout_alignLeft="@+id/verhaal2"
      android:layout_alignStart="@+id/verhaal2" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Alexander Bouman"
      android:textSize="20sp"
      android:id="@+id/verhaal4"
      android:layout_below="@+id/verhaal3"
      android:layout_alignLeft="@+id/verhaal3"
      android:layout_alignStart="@+id/verhaal3" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Alice Droller"
      android:textSize="20sp"
      android:id="@+id/verhaal5"
      android:layout_below="@+id/verhaal4"
      android:layout_alignLeft="@+id/verhaal4"
      android:layout_alignStart="@+id/verhaal4" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Arnold Pappie"
      android:textSize="20sp"
      android:id="@+id/verhaal6"
      android:layout_below="@+id/verhaal5"
      android:layout_alignLeft="@+id/verhaal5"
      android:layout_alignStart="@+id/verhaal5" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Dientje Noach-Bino"
      android:textSize="20sp"
      android:id="@+id/verhaal7"
      android:layout_below="@+id/verhaal6"
      android:layout_alignLeft="@+id/verhaal6"
      android:layout_alignStart="@+id/verhaal6" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Eduard Sanders"
      android:textSize="20sp"
      android:id="@+id/verhaal8"
      android:layout_below="@+id/verhaal7"
      android:layout_alignLeft="@+id/verhaal7"
      android:layout_alignStart="@+id/verhaal7" />

        <TextView
              android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Erna Baruch-Katzenstein"
               android:textSize="20sp"
               android:id="@+id/verhaal9"
            android:layout_below="@+id/verhaal8"
            android:layout_alignLeft="@+id/verhaal8"
            android:layout_alignStart="@+id/verhaal8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
