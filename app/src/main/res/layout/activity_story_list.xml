            android:text="Judith Cohen-Engelsman"
            android:textSize="20sp"
            android:id="@+id/verhaal11"
            android:layout_below="@+id/verhaal10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Julius Wolff"
            android:textSize="20sp"
            android:id="@+id/verhaal12"
            android:layout_below="@+id/verhaal11"
            android:layout_alignLeft="@+id/verhaal11"
            android:layout_alignEnd="@+id/verhaal11" />

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>


