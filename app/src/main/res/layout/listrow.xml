<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--Textview met id's voornaam en achternaam zijn leeg gelaten voor het uitlijnen, anders worden deze labels steeds
    herhaalt door de ListActivity-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/voornaam"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/achternaam"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/voornaam"
        android:layout_toEndOf="@+id/voornaam"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />


    <TextView
        android:id="@+id/txtid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_below="@+id/voornaam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/achternaam"
        android:layout_alignLeft="@+id/achternaam"
        android:layout_alignStart="@+id/achternaam"
        android:textStyle="bold"
        android:paddingLeft="45sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp">
    </TextView>


</RelativeLayout>